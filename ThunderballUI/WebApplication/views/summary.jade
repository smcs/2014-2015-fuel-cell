block scripts
  script(src="/socket.io/socket.io.js")
  script(src="/javascripts/summary.js")


block content
 // Title block
 h1#pgtitle= title

 // Statistics table
 table.customers#statstable
     tr.header
       th Parameter
       th Value

     - devs = [ "Output Power", "Fuel Pressure", "Watt Hours Delivered", "Serial Number", "Battery Type", "Charge Voltage", "Max Charge Current" ];
     each dev in devs
        tr
           td.row #{dev}
           td.rowalt Data

 br
 // Button anf entry field for creating log entries via Javascript function 'processLog' in index.js
 | New Log Message:
 input(id="msgfield", name="msg2", type="text", value="Then")
 input(id="logbut", value="Add To Log", type="button", onClick="processLog(msgfield.value)")

 // log view navigation button - new web page '/log' 
 br
 br
 input(id="logview", value="View Log", type="button", onClick="self.location='/log'")
 //Need the code that makes the Delete button do something
 input(id="deletelog", value="Delete Log", type="button")
 // Control button 'starts' fuel cell via JAvascript funtion 'setFuelCellState' in index.js
 br
 br
 input(id="startfc", value="Start Fuel Cell", type="button", onClick="setFuelCellState(1)")
 input(id="stopfc", value="Stop Fuel Cell", type="button", onClick="setFuelCellState(0)")

